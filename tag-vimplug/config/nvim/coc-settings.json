{
	"languageserver": {
		"haskell": {
			"command": "haskell-language-server",
			"args": ["--lsp"],
			"rootPatterns": [
				"*.cabal",
				"stack.yaml",
				"cabal.project",
				"package.yaml",
				"shell.nix"
			],
			"filetypes": [
				"haskell",
				"lhaskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
				}
			}
		}
	}
}
